<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>任務倒數第12天</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/task-4.css">
</head>

<body>
    <div class="container">
        <!-- 圖片 1 -->
        <img src="/images/D12/750x1200-Day12_KV.png" alt="任務圖片">
        <!-- 新增問答題 1 -->
        <div class="quiz-container" id="quiz1">
            <div class="quiz">
                <img src="/images/D12/750x1200-Day12_QA1.png" alt="問答題 1 題目">
                <div class="answers">
                    <img class="answer" data-answer="1" src="/images/D12/QA-CTA-images/Q1/D12-Q1-CTA_01.png"
                        alt="問答題 1 答案">
                    <img class="answer" data-answer="1" src="/images/D12/QA-CTA-images/Q1/D12-Q1-CTA_ov_01.png"
                        alt="問答題 1 答案 選擇" style="display: none;">
                    <img class="answer" data-answer="2" src="/images/D12/QA-CTA-images/Q1/D12-Q1-CTA_02.png"
                        alt="問答題 1 答案">
                    <img class="answer" data-answer="2" src="/images/D12/QA-CTA-images/Q1/D12-Q1-CTA_ov_02.png"
                        alt="問答題 1 答案 選擇" style="display: none;">
                    <img class="answer" data-answer="3" src="/images/D12/QA-CTA-images/Q1/D12-Q1-CTA_03.png"
                        alt="問答題 1 答案">
                    <img class="answer" data-answer="3" src="/images/D12/QA-CTA-images/Q1/D12-Q1-CTA_ov_03.png"
                        alt="問答題 1 答案 選擇" style="display: none;">
                    <img class="confirm" src="/images/D12/QA-CTA-images/Q1/D12-Q1-CTA_confirm.png" alt="問答題 1 答案">
                </div>
            </div>
            <div>
                <img class="result correct" src="/images/D12/750x1200-Day12_QA1_V.png" alt="問答題 1 正確答案"
                    style="display: none;">
                <img class="result incorrect" src="/images/D12/750x1200-Day12_QA1_X.png" alt="問答題 1 錯誤答案"
                    style="display: none;">
            </div>
        </div>
        <!-- 新增問答題 2 -->
        <div class="quiz-container hidden" id="quiz2">
            <div class="quiz">
                <img src="/images/D12/750x1200-Day12_QA2.png" alt="問答題 2 題目">
                <div class="answers">
                    <img class="answer" data-answer="1" src="/images/D12/QA-CTA-images/Q2/D12-Q2-CTA_01.png"
                        alt="問答題 2 答案">
                    <img class="answer" data-answer="1" src="/images/D12/QA-CTA-images/Q2/D12-Q2-CTA_ov_01.png"
                        alt="問答題 2 答案 選擇" style="display: none;">
                    <img class="answer" data-answer="2" src="/images/D12/QA-CTA-images/Q2/D12-Q2-CTA_02.png"
                        alt="問答題 2 答案">
                    <img class="answer" data-answer="2" src="/images/D12/QA-CTA-images/Q2/D12-Q2-CTA_ov_02.png"
                        alt="問答題 2 答案 選擇" style="display: none;">
                    <img class="answer" data-answer="3" src="/images/D12/QA-CTA-images/Q2/D12-Q2-CTA_03.png"
                        alt="問答題 2 答案">
                    <img class="answer" data-answer="3" src="/images/D12/QA-CTA-images/Q2/D12-Q2-CTA_ov_03.png"
                        alt="問答題 2 答案 選擇" style="display: none;">
                    <img class="confirm" src="/images/D12/QA-CTA-images/Q2/D12-Q2-CTA_confirm.png" alt="問答題 2 答案">
                </div>
            </div>
            <div>
                <img class="result correct" src="/images/D12/750x1200-Day12_QA2_V.png" alt="問答題 2 正確答案"
                    style="display: none;">
                <img class="result incorrect" src="/images/D12/750x1200-Day12_QA2_X.png" alt="問答題 2 錯誤答案"
                    style="display: none;">
            </div>
        </div>
        <div>
            <!-- 圖片 2 -->
            <img src="/images/D12/750x1200-Day12_end.png" alt="任務圖片">
            <!-- 新增 "更多圖片" -->
            <img class="read-more-img" src="/images/CTA-read more.png" alt="更多圖片">
            <!-- 彈窗內容 -->
            <div id="popup" class="popup hidden">
                <div class="popup-content">
                    <p>更多訊息</p>
                    <button class="close-popup">關閉</button>
                </div>
            </div>

            <div id="popup" class="popup hidden">
                <div class="popup-content">
                    <p>更多訊息</p>
                    <button class="close-popup">關閉</button>
                </div>
            </div>

            <div class="action-container hidden">
                <div class="checkbox-container">
                    <input type="checkbox" id="taskCompletedCheckbox">
                    <label for="taskCompletedCheckbox">我已完成【今日任務內容】</label>
                </div>
                <div>
                    <% if (!isCompleted && task.TaskDate===currentDate) { %>
                        <button class="button" id="complete-task-btn">
                            <img src="/images/D12/750x1200-CTA_01.png" alt="按鈕圖片">
                        </button>
                        <% } else if (isCompleted) { %>
                            <button class="button" id="complete-task-btn">
                                <img src="/images/D12/750x1200-CTA_02.png" alt="按鈕圖片">
                            </button>
                            <% } else if (!isCompleted && task.TaskDate !==currentDate) { %>
                                <p id="notTodayMessage" style="color: red;">非今日任務</p>
                                <% } %>
                </div>
            </div>
        </div>

        <div id="rewardMessage" class="hidden">
            <p>恭喜完成任務！</p>
            <h3 id="rewardMessageh3"></h3>
            <button id="returnToParentHome">返回首頁</button>
        </div>
    </div>
    <div id="freezeLayer" class="hidden"></div>

    <script>
        console.log('任務數據:', "<%= JSON.stringify(task) %>");
        console.log('當前日期:', '<%= currentDate %>');
        console.log('是否已完成:', "<%= isCompleted %>");

        function getQueryParameter(name) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(name);
        }

        const query = getQueryParameter('query');
        if (query && !sessionStorage.getItem('ContactId')) {
            const contactId = '<%= contactId %>';
            const query = '<%= query %>';

            sessionStorage.setItem('ContactId', contactId);
            sessionStorage.setItem('Query', query);
            console.log('ContactId 和 Query 已存儲到 sessionStorage');
        } else {
            console.log('ContactId 已經存在於 sessionStorage');
        }

        document.addEventListener('DOMContentLoaded', () => {
            const readMoreImg = document.querySelector('.read-more-img');
            const popup = document.getElementById('popup');
            const closePopupButton = popup.querySelector('.close-popup');

            document.getElementById('returnToParentHome').addEventListener('click', () => {
                window.parent.postMessage('navigate-home', 'https://pmi--qa.sandbox.my.site.com/');
            });

            // 點擊圖片顯示 Popup
            readMoreImg.addEventListener('click', () => {
                popup.classList.remove('hidden'); // 顯示彈窗
            });

            closePopupButton.addEventListener('click', () => {
                popup.classList.add('hidden');
            });

            popup.addEventListener('click', (event) => {
                if (event.target === popup) {
                    popup.classList.add('hidden');
                }
            });

            const checkbox = document.getElementById('taskCompletedCheckbox');
            const button = document.getElementById('complete-task-btn');
            const buttonImg = button.querySelector('img');
            const freezeLayer = document.getElementById('freezeLayer');

            button.disabled = true;
            button.style.opacity = 0.5;

            checkbox.addEventListener('change', updateButtonState);

            function updateButtonState() {
                const isCheckboxChecked = checkbox.checked;
                const buttonImageSrc = buttonImg.getAttribute('src');

                if (buttonImageSrc === '/images/D12/750x1200-CTA_02.png') {
                    button.disabled = true;
                    button.style.opacity = 1;
                } else if (isCheckboxChecked && buttonImageSrc === '/images/D12/750x1200-CTA_01.png') {
                    button.disabled = false;
                    button.style.opacity = 1;
                } else {
                    button.disabled = true;
                    button.style.opacity = 0.5;
                }
            }

            button.addEventListener('click', () => {
                if (!button.disabled) {
                    const userId = sessionStorage.getItem('ContactId');
                    button.disabled = true;
                    buttonImg.setAttribute('src', '/images/D12/750x1200-CTA_02.png');
                    freezeLayer.classList.add('active');

                    fetch('/task/4/complete', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ UserId: userId }),
                    })
                        .then(response => response.json())
                        .then(data => {
                            const rewardMessage = document.getElementById('rewardMessage');
                            const rewardMessagecontent = document.getElementById('rewardMessageh3');
                            rewardMessagecontent.textContent = `${data.message} 獲得 ${data.reward} 元的獎勵金。`;
                            rewardMessage.classList.remove('hidden');
                            freezeLayer.classList.remove('active');
                        })
                        .catch(error => {
                            console.error('提交失敗:', error);
                        });
                }
            });

            // 新增問答題邏輯
            document.querySelectorAll('.quiz .answer').forEach(answer => {
                answer.addEventListener('click', (e) => {
                    const quiz = answer.closest('.quiz');
                    const answerGroup = quiz.querySelectorAll('.answer');
                    answerGroup.forEach(img => img.classList.remove('selected'));
                    const initialAnswers = quiz.querySelectorAll('.answer:not([alt*="選擇"])');
                    const selectedAnswer = quiz.querySelector(`.answer[data-answer="${answer.dataset.answer}"][alt*="選擇"]`);
                    answerGroup.forEach(img => img.style.display = 'none');
                    initialAnswers.forEach(img => img.style.display = 'block');
                    e.target.style.display = 'none';
                    if (selectedAnswer) {
                        selectedAnswer.classList.add('selected');
                        selectedAnswer.style.display = 'block';
                    }
                });
            });

            document.querySelectorAll('.quiz .confirm').forEach(confirmButton => {
                confirmButton.addEventListener('click', () => {
                    const quiz = confirmButton.closest('.quiz');
                    const quizContainer = confirmButton.closest('.quiz-container');
                    const selectedAnswer = quiz.querySelector('.answer.selected');
                    const questionNumber = quiz.querySelector('img').getAttribute('alt').match(/問答題 (\d+)/)[1];
                    let correctAnswer;

                    if (questionNumber === '1') {
                        correctAnswer = quiz.querySelector('.answer[data-answer="3"]'); // 題目一的正確答案是 data-answer="3"
                    } else if (questionNumber === '2') {
                        correctAnswer = quiz.querySelector('.answer[data-answer="2"]'); // 題目二的正確答案是 data-answer="2"
                    }

                    const correctImage = quizContainer.querySelector('.result.correct');
                    const incorrectImage = quizContainer.querySelector('.result.incorrect');
                    if (selectedAnswer && selectedAnswer.dataset.answer === correctAnswer.dataset.answer) {
                        correctImage.style.display = 'block';
                    } else {
                        incorrectImage.style.display = 'block';
                    }

                    // Disable all answers after confirming
                    quiz.querySelectorAll('.answer').forEach(answer => {
                        answer.style.pointerEvents = 'none';
                    });

                    // Show the next question or action container
                    if (questionNumber === '1') {
                        document.getElementById('quiz2').classList.remove('hidden');
                    } else if (questionNumber === '2') {
                        document.querySelector('.action-container').classList.remove('hidden');
                    }
                });
            });

            // Initially show only the first question
            document.getElementById('quiz1').classList.remove('hidden');

            updateButtonState();
        });
    </script>
</body>

</html>