<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>任務倒數第13天</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/task-3.css">
</head>

<body>
    <div class="container">
        <!-- 圖片 1 -->
        <img src="/images/D13/750x1200-Day13.png" alt="任務圖片">

        <!-- 彈窗內容 -->
        <div id="popup" class="popup hidden">
            <div class="popup-content">
                <p>更多訊息</p>
                <button class="close-popup">關閉</button>
            </div>
        </div>

        <div id="popup" class="popup hidden">
            <div class="popup-content">
                <p>更多訊息</p>
                <button class="close-popup">關閉</button>
            </div>
        </div>

        <div class="action-container">
            <div class="checkbox-container">
                <input type="checkbox" id="taskCompletedCheckbox">
                <label style="color: white;" for="taskCompletedCheckbox">我已完成【今日任務內容】</label>
            </div>
            <div>
                <% if (!isCompleted && task.TaskDate===currentDate) { %>
                    <button class="button" id="complete-task-btn">
                        <img src="/images/D13/750x1200-CTA_01.png" alt="按鈕圖片">
                    </button>
                    <% } else if (isCompleted) { %>
                        <button class="button" id="complete-task-btn">
                            <img src="/images/D13/750x1200-CTA_02.png" alt="按鈕圖片">
                        </button>
                        <% } else if (!isCompleted && task.TaskDate !==currentDate) { %>
                            <p id="notTodayMessage" style="color: red;">非今日任務</p>
                            <% } %>
            </div>
        </div>
        <div id="rewardMessage" class="hidden">
            <p>恭喜完成任務！</p>
            <h3 id="rewardMessageh3"></h3>
            <button id="returnToParentHome">返回首頁</button>
        </div>
    </div>
    <div id="freezeLayer" class="hidden"></div>

    <script>
        console.log('任務數據:', "<%= JSON.stringify(task) %>");
        console.log('當前日期:', '<%= currentDate %>');
        console.log('是否已完成:', "<%= isCompleted %>");

        function getQueryParameter(name) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(name);
        }

        const query = getQueryParameter('query');
        if (query && !sessionStorage.getItem('ContactId')) {
            const contactId = '<%= contactId %>';
            const query = '<%= query %>';

            sessionStorage.setItem('ContactId', contactId);
            sessionStorage.setItem('Query', query);
            console.log('ContactId 和 Query 已存儲到 sessionStorage');
        } else {
            console.log('ContactId 已經存在於 sessionStorage');
        }

        document.addEventListener('DOMContentLoaded', () => {
            const popup = document.getElementById('popup');
            const closePopupButton = popup.querySelector('.close-popup');
            document.getElementById('returnToParentHome').addEventListener('click', () => {
                window.parent.postMessage('navigate-home', 'https://pmi--qa.sandbox.my.site.com/');
            });

            closePopupButton.addEventListener('click', () => {
                popup.classList.add('hidden');
            });
            popup.addEventListener('click', (event) => {
                if (event.target === popup) {
                    popup.classList.add('hidden');
                }
            });
            const checkbox = document.getElementById('taskCompletedCheckbox');
            const button = document.getElementById('complete-task-btn');
            let buttonImg = null; // 修改 const 為 let
            const freezeLayer = document.getElementById('freezeLayer'); // 移動宣告到這裡
            if (button) {
                buttonImg = button.querySelector('img');
                button.disabled = true;
                button.style.opacity = 0.5;
                checkbox.addEventListener('change', updateButtonState);
                button.addEventListener('click', () => {
                    if (!button.disabled) {
                        const userId = sessionStorage.getItem('ContactId');
                        button.disabled = true;
                        buttonImg.setAttribute('src', '/images/D13/750x1200-CTA_02.png');
                        freezeLayer.classList.add('active');
    
                        fetch('/task/3/complete', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ UserId: userId }),
                        })
                            .then(response => response.json())
                            .then(data => {
                                const rewardMessage = document.getElementById('rewardMessage');
                                const rewardMessagecontent = document.getElementById('rewardMessageh3');
                                rewardMessagecontent.textContent = `${data.message} 獲得 ${data.reward} 元的獎勵金。`;
                                rewardMessage.classList.remove('hidden');
                                freezeLayer.classList.remove('active');
                            })
                            .catch(error => {
                                console.error('提交失敗:', error);
                            });
                    }
                });
                updateButtonState();
            }

            function updateButtonState() {
                const isCheckboxChecked = checkbox.checked;
                const buttonImageSrc = buttonImg.getAttribute('src');

                if (buttonImageSrc === '/images/D13/750x1200-CTA_02.png') {
                    button.disabled = true;
                    button.style.opacity = 1;
                } else if (isCheckboxChecked && buttonImageSrc === '/images/D13/750x1200-CTA_01.png') {
                    button.disabled = false;
                    button.style.opacity = 1;
                } else {
                    button.disabled = true;
                    button.style.opacity = 0.5;
                }
            }
        });
    </script>
</body>

</html>